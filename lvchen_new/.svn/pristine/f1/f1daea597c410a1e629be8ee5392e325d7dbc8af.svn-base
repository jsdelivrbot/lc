page-target-game {
    .content{
        background:#f6f6f6 !important;
    }
    .pkNarbar{
        height: 44px;
        display: flex;
        background: #fff;
        align-items: center;
        >div{
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 44px;
            span{
                height: 44px;
                line-height: 44px;
                width: 50%;
                text-align:center;
               
            }
        }
        // 红色下划线
        .active{
            color: #007d41;
            border-bottom: 1px solid  #007d41;
        }
    }
    .bottomHeight{

        display: flex;
        height: 3rem;
    }
    .pkContent{
        height: 1rem;
        background: #ccc;
    }
   
    ion-slides {
        .slide-zoom {
            height: 100%;
            ion-content{
                margin-top:1rem;
            }
            .green{
                background: #eafef0;
            }
            .red{
                background: #fff0f0;
            }
            .grey{
                background: gainsboro;
            }
            .monthlyList{
                display: flex;
               flex-direction: column;
               background:#fff !important;
               border-bottom: 1px solid  rgba(185, 181, 181, 0.7);
               .targetDate{
                font-size: 1.5rem;
                padding-left: 6rem;
                color: #ccc;
                text-align: left;
                height: 3rem;
            }
                .title{
                  display: flex;
                  align-items: center;
                  height: 5rem;
                  justify-content: space-between;
                  img{
                      height: 5rem;
                      width: 4.9rem;
                  }
                  .name{
                    flex: 1;
                    justify-content: space-between;
                    display: flex;
                    span{
                      flex: 1;
                      &:first-child{
                        padding-right: 10px;
                        font-size: 18px;
                        border-right:0.55px solid rgba(27, 23, 23, 0.3);
                      }
                      &:last-child{
                        padding-left: 10px;
                       
                        font-size: 16px;
                        color: #444;
                      }
                  }
                  }
                 
                  .m_icon{
                    width: 30%;
                    display: flex;
                    padding-right: 20px;
                    justify-content: flex-end;
                    align-items: flex-end;
                    ion-icon{
                      color: #999;
                      font-size: 20px;
                    }
                  }
                  
                }
                .content{
                  margin-left: 6rem;
                  display: flex;
                  height: 7rem;
                  background:#fff !important;
                  .successRate{
                    p{
                      text-align: left;
                      margin: 0;
                    }
                  }
                  .successRate,.successPro{
                    flex: 1;
                  }
                  .successRate{
                    p:first-child{
                      color: #999;
                    }
                    p:nth-child(2){
                      color: #f75d48;
                      font-size: 27px;
                      position: relative;
                      span{
                        position:absolute;
                        top:0;
                        font-size: 16px;
                        color: #999;
                      }
                    }
                  }
                  .successPro{
                    padding: 0 20px;
                    p{
                      color: #ed4247;
                    }
                    .progress {
                      background-color: #f5f5f5;
                      box-shadow: 0 .01rem .02rem rgba(0, 0, 0, 0.1) inset;
                      height: 1.5rem;
                      margin-top: 1rem;
                      border-radius: 1rem;
                      overflow: hidden;
                    }
                    .progress-bar {
                      background-color: red;
                      box-shadow: 0 -0.01rem 0 rgba(0, 0, 0, 0.15) inset;
                      color: #fff;
                      float: left;
                      font-size: 14px;
                      height: 100%;
                      line-height: 1.5rem;
                      text-align: center;
                      border-radius: 1rem;
                      transition: width 0.6s ease 0s;
                      width: 0;
                    }
                    .progress-bar.finish{
                      background-color: gray;
                    }
                  }
                  
                }
              }
        }
    }
}
