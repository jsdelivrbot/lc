page-repay-gift-detail {
    .content{
        background:#f5f4f3 !important;
        position: relative;

        .confirm-box{
            height: 100%;
            width: 100%;
            position: fixed;
            z-index: 2;
            top:0;
            background-color: rgba($color: #000000, $alpha: 0.8);
            display: flex;
            justify-content: center;
            align-items: center;

            .confirm-wrap{
                background-color: rgba($color: #ffffff, $alpha: 1);
                padding: 1.5rem;
                // height: 14rem;
                width: 70%;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                border-radius: 10px;

                .confirm-title{
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    padding-bottom: 1rem;
                    font-size: 1.5rem;
                }

                .confirm-input-wrap{
                    display: flex;
                    align-items: center;
                    height: 3rem;
                    width: 100%;

                    input{
                        padding: 0.5rem;
                        border: 1px solid  rgba($color: #bbbbbb, $alpha: 1.0);
                        height: 100%;
                        margin-right: 5%;
                        min-width: 50%;
                        text-align: center;
                    }

                    button{
                        margin: 0;
                        height: 100%;
                    }
                }

                .confirm-button-wrap{
                    width: 100%;
                    height: 3rem;
                    margin-top: 1rem;
                    margin-bottom: 1rem;
                }
            }
        }
    }
}
