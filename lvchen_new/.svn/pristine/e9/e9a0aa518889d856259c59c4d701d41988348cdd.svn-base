page-sale-verify {
  .content {
    background: #f5f4f3 !important;
  }

  input {
    border: none;
    &::-webkit-input-placeholder {
      color: #aaa;
    }
  }
  textarea {
    &::-webkit-input-placeholder {
      color: #aaa;
    }
  }
  .textarea {
    margin-top: 20px;
    width: 100%;
    height: 200px;
    font-size: 15px;
    padding: 10px 15px;
    color: #666;
  }

  .smsCodeBtn {
    font-size: 12px;
    height: 32px;
    margin-top: -3px;
    position: absolute;
    right: 15px;
  }
}
