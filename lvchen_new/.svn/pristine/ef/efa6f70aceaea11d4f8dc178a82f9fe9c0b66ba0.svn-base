<ion-header>
  <ion-navbar>
    <ion-title>寄存单详情</ion-title>
    <ion-buttons end>
      <button ion-button icon-only (click)='getReceiveDel()' *ngIf='receiveNum==0?false:true'>
        <div  >
          <ion-icon name="ios-paper-outline" ></ion-icon>&nbsp;&nbsp;
        </div>
      </button>
    </ion-buttons>
  </ion-navbar>
</ion-header>
<ion-content>
  <div class="header-div">
    <div padding>顾客手机&nbsp;&nbsp;&nbsp;&nbsp;{{phone}} </div>
    <div style="height: 1px;width: 100%;background: #ccc;"></div>
    <div padding>寄存单号&nbsp;&nbsp;&nbsp;&nbsp;{{receiptNo}} </div>
    <components-colorbar></components-colorbar>
  </div>
  <div class="act-div"> {{actNum==0?"没有参与任何活动":"参与活动："}}
    <ul class="{{actNum==0?'hidden':''}}" color="oranges">
      <li *ngFor="let act of acts;" >{{act.actName}}</li>
      
    </ul>
  </div>
  <div class="attribute">商品</div>
  <ion-list>
    <ion-list-header class="list-header">
      <ion-row>
        <ion-col col-8>
          商品名称
        </ion-col>
        <ion-col col-2 class="t-a">
          寄存总量
        </ion-col>
        <ion-col col-2 class="t-a">
          剩余
        </ion-col>
      </ion-row>
    </ion-list-header>
   <ion-grid class="grid-style">
      <ion-row *ngFor="let good of goods;">
        <ion-col col-8>
          {{good.goodsName}}
        </ion-col>
        <ion-col col-2 class="t-a">
          {{good.goodsNum}}
        </ion-col>
        <ion-col col-2 class="t-a">
          {{good.num}}
        </ion-col>
      </ion-row>
    </ion-grid>
  </ion-list>
  <div class="attribute {{giftNum==0?'hidden':''}}">赠品</div>
  <ion-list class="{{giftNum==0?'hidden':''}}">
    <ion-list-header class="list-header">
      <ion-row>
        <ion-col col-8>
          赠品名称
        </ion-col>
        <ion-col col-2 class="t-a">
          寄存总量
        </ion-col>
        <ion-col col-2 class="t-a">
          剩余
        </ion-col>
      </ion-row>
    </ion-list-header>
     <ion-grid class="grid-style">
      <ion-row *ngFor="let good of gifts;">
        <ion-col col-8>
          {{good.goodsName}}
        </ion-col>
        <ion-col col-2 class="t-a">
          {{good.goodsNum}}
        </ion-col>
        <ion-col col-2 class="t-a">
          {{good.num}}
        </ion-col>
      </ion-row>
    </ion-grid>
  </ion-list>
</ion-content>
<ion-footer no-shadow class="{{remainNum==0?'hidden':''}}">
  <div class="depositFoot">
      <div  class="foot1" (click)="onChargeback()">
          <button ion-button color="gentle" col-12>
            退单
          </button>
        </div>
        <div class="foot2" (click)="onReceive()">
          <button ion-button color="primary" col-12 style="margin-left: 2px;">
            领取
          </button>
        </div>
  </div>
</ion-footer>