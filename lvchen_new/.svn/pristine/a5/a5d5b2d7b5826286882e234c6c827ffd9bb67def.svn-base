page-home {
  .div-charts{  
    width:100%;  
    height:100%;  
} 
  .content{
    background:#f5f4f3 !important;
}
  .banners {
    height: 22rem;
  }
  .slide-zoom{
    height: 100%;
    img {
      width:100%;
    }
  }
  .swiper-container-horizontal > .swiper-pagination-bullets {
    left: 0;
    bottom: 25px;
    width: 100%;
}

  .menu-button {
    height: 8.5rem;
    width: 100%;
    div {
      text-align: center;
      color: #666666;
      font-size: 16px;
      img {
        width: 4.8rem;
        height: 4.8rem;
      }
    }
  }
  .redDot {
    height: 80%;
    div {
      background: #EF5038;
      width: 6px;
      height: 6px;
      border-radius: 3px;
    }
  }
  .companyInfoNum{
    position: relative;
    .num{
      position: absolute;
      top:5px;
      right: 25px;
      height: 20px;
      min-width: 20px;
      text-align: center;
      border:1px solid #e4393c;
      border-radius: 50%;
      color: #fff;
      background: #e4393c;
    }
  }
}
