page-about {
  .scroll-content {
    overflow: hidden;
    // background-attachment: scroll;
  }

  .list-scroll{
    height: 29rem;
    //margin-bottom: 5rem;
  }

  .grantMarket {
    background:url('#{$dir}meCenter.png')no-repeat;
    background-size: 100% 100%;
    // background-attachment:
    .grantMarketTitle {
      height: 44px;
      line-height: 44px;
      padding: 5px;
      width: 100%;
      text-align: center;
      font-size: 18px;
      color: #fff;
      font-weight: 10000;
    }
    .grantMarketData {
      padding: 35px 25px;
      margin-bottom: 45px;
      display: flex;
      color: #fff;
      .icon-ios {
        font-size: 18px !important;
        font-weight: 800px;
      }
      .dataTitle {
        text-align: center;
        font-size: 18px;
      }
      .dataNum {
        font-size: 24px;
        width: 100%;
        height: 40px;
        line-height: 40px;
      }
      .ion-md-arrow-round-down {
        color: blue;
      }
      .ion-md-arrow-round-up {
        color: red;
      }
      .dataRight {
        flex: 1;
        text-align: center;
        border-right: 1px solid #eee;
      }
      .dataLeft {
        flex: 1;
        text-align: center;
      }
      .compara {
        display: flex;
        width: 100%;
        padding: 20px 10px 0px 6px;
        .comparaRight {
          flex: 1;
          span:first-child {
            display: block;
            width: 100%;
            font-size: 10px;
          }
          span:nth-child(2) {
            width: 100%;
            display: block;
            font-size: 16px;
          }
          border-right: 1px solid #ccc;
        }
        .comparaLeft {
          flex: 1;
          span:first-child {
            display: block;
            width: 100%;
            font-size: 10px;
          }
          span:nth-child(2) {
            width: 100%;
            display: block;
            font-size: 16px;
          }
        }
      }
    }
  }
  .menu-button {
    height: 8.5rem;
    width: 100%;
    div {
      text-align: center;
      color: #666666;
      font-size: 16px;
      img {
        width: 4.8rem;
        height: 4.8rem;
      }
    }
  }
  .redDot {
    height: 80%;
    div {
      background: #EF5038;
      width: 6px;
      height: 6px;
      border-radius: 3px;
    }
  }
}
