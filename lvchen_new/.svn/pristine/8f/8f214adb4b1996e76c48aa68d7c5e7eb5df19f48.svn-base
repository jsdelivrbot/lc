page-business-my-course {
    ion-content {
        background-color: rgba($color: #FFFFFF, $alpha: 1.0) !important;
        .my-course-list {
            margin: 0;
            padding: 0;
            background-color: rgba($color: #ffffff, $alpha: 1.0);
            margin-bottom: 1rem;
            font-size: 1.4rem;
            ion-row {
                padding: 0 1.5rem;
            }
            .my-course-list-title {
                padding: 1rem 0 0.5rem;
                font-size: 1.2rem;
            }
            .course-wrap:nth-child(2n-1) {
                padding: 0.5rem 0.5rem 0 0;
            }
            .course-wrap:nth-child(2n) {
                padding: 0.5rem 0 0 0.5rem;
            }
            .my-course-title {
                padding: 0.8rem 0 0;
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
                width: 70%;
                color: rgba($color: #000000, $alpha: 0.8);
            }
            .my-course-img-wrap {
                font-size: 0px ;
                border-radius: 5px;
                overflow: hidden;
                img {
                    width: 100%;
                    max-height: calc((100vw / 7.5 * 4)*0.5);
                }
            }
        }
    }
}