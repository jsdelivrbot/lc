<ion-header>
  <ion-navbar>
    <ion-title>扫礼品</ion-title>
  </ion-navbar>
</ion-header>
<ion-content class="{{backgroundnone==false?'white':'qrscanner'}}">
    <div class="{{backgroundnone==false?'white':'qrscanner-area'}}">
    </div>
    <div class="{{backgroundnone==false?'white':'through-line'}}"></div>
  </ion-content>
<ion-footer>
  
  
  <div class="bottom-div">
    <ion-row>
      <ion-col col-1></ion-col>
      <ion-col (tap)="search()" class="submit-btn" ion-button col-4>
        <ion-icon name="search"></ion-icon>&nbsp;&nbsp;查询
      </ion-col>
      <ion-col col-1></ion-col>
      <ion-col (tap)="submit()" class="submit-btn" ion-button col-5>
        <ion-icon name="checkmark"></ion-icon>&nbsp;&nbsp;确认
        <span class="{{num==0?'hidden':''}} red-badge">{{num}}</span>
      </ion-col>
    </ion-row>
  </div>
</ion-footer>
