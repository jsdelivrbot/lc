page-customer-logging {
    // 头部
    ion-header {
        .toolbar-ios {
            padding: 4px;
            padding-left: 4px;
            padding-right: 4px;
            max-height: 44px;
        } // 头部两个指示器
        .tabs-wrap {
            padding: 0;
            margin: 0;
            width: 100%;
            height: 4rem;
            border-bottom: 1px solid rgba(229, 229, 229, 0.7);
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fff;
            div {
                width: 100%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center; // 圆圈数字
                >span {
                    width: 30px;
                    height: 30px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    border: 0.2rem solid #d8d8d8;
                    border-radius: 50%;
                    margin-right: 1rem;
                    >span {
                        width: 22px;
                        height: 22px;
                        display: block;
                        background-color: #d8d8d8;
                        border-radius: 50%;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        color: white;
                        font-size: 0.6rem;
                    }
                } // 被选中的指示器
                .tab-Selected {
                    border: 0.2rem solid #00783a;
                    >span {
                        background-color: #00783a;
                    }
                }
                .tab-Selected-text {
                    color: #00783a;
                }
            }
        }
    }
    .scroll-content {
        padding: 0 !important;
    } // 内容
    ion-content {
        background-color: rgb(245, 244, 243) !important;
        form {
            ion-item {
                position: relative;
                padding: 0 !important;
                background-color: transparent !important;
                .item-inner {
                    border: none !important;
                    padding: 0 !important;
                }
                ion-label {
                    margin: 0 !important;
                }
            }
        } // 顾客信息
        .info-wrap {
            border-top: 1px solid rgba(229, 229, 229, 0.7);
            border-bottom: 1px solid rgba(229, 229, 229, 0.7);
            height: 8.5rem;
            margin-top: 1.5rem;
            background-color: #fff;
            font-size: 1.4rem;
            padding: 0 1.5rem; // 两个输入框
            >div {
                height: 50%;
                display: flex;
                justify-content: flex-start;
                align-items: center;
                >span {
                    margin-right: 1.5rem;
                }
                >input {
                    border: none;
                    color: #535353;
                }
                >input:disabled {
                    background-color: transparent;
                }
            }
            .info-name {
                border-top: 0.1rem solid #d8d8d8;
            }
        } // 宝宝信息
        .baby-info {
            border-top: 1px solid rgba(229, 229, 229, 0.7);
            border-bottom: 1px solid rgba(229, 229, 229, 0.7);
            margin-top: 1.5rem;
            background-color: #fff;
            font-size: 1.4rem; // 头部
            .baby-header {
                padding: 0 1.5rem;
                border-bottom: 0.1rem solid #d8d8d8;
                height: 4.5rem;
                display: flex;
                justify-content: space-between;
                align-items: center;
            } // 底部提示
            .baby-tips {
                height: 3rem;
                font-size: 1rem;
                color: #bbb;
                display: flex;
                align-items: center;
                padding: 0 1.5rem;
            } // 添加按钮
            .plus-baby {
                width: 2.5rem;
                height: 2.5rem;
                display: block;
                position: relative;
                img {
                    width: 100%;
                    height: 100%;
                }
            } // 宝宝具体资料
            ul {
                list-style: none;
                padding: 0;
                margin: 0;
                li {
                    border-bottom: 0.1rem solid #d8d8d8;
                    padding: 0.8rem 1.5rem;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    color: #535353; // 头像
                    img {
                        width: 3rem;
                        height: 3rem;
                    } // 宝宝姓名
                    .baby-detail {
                        display: flex;
                        align-items: center;
                        >span:not(:last-child) {
                            margin-right: 1rem;
                        } // 右边箭头
                        .right-arrow {
                            display: flex;
                            width: 3rem;
                            height: 3rem;
                            position: relative;
                            justify-content: center;
                            align-items: center;
                            span:nth-child(1) {
                                height: 50%;
                                width: 50%;
                                display: block;
                                position: absolute;
                                border-right: 0.2rem solid #535353;
                                transform: rotateZ(45deg);
                            }
                            span:nth-child(2) {
                                height: 50%;
                                width: 50%;
                                display: block;
                                position: absolute;
                                border-right: 0.2rem solid #535353;
                                transform: rotateZ(-45deg)
                            }
                        }
                        .right-arrow-display {
                            visibility: hidden;
                        }
                    }
                }
            }
        } // 备注
        .remark {
            height: 15rem;
            background-color: #fff;
            margin-top: 1.5rem;
            border-top: 1px solid rgba(229, 229, 229, 0.7);
            border-bottom: 1px solid rgba(229, 229, 229, 0.7);
            margin-bottom: 5rem;
            .input-wrapper{
                flex-direction: column;
            }
            ion-label {
                min-width: 100%;
                display: block;
                padding: 1rem 1.5rem 0.5rem;
                min-height: 20%;
                background-color: #fff;
                font-size: 1.4rem; // 头部
            }
            ion-textarea{
                height: 80%;
                background-color: #fff;
            }
            textarea {
                width: 100% !important;
                height: 90%;
                resize: none;
                border: none;
                margin: 0 !important;
                padding: 0.2rem 1.5rem;
                font-size: 1.5rem;
                color: #535353;
                background-color: rgba($color: #ffffff, $alpha: 1.0);
            }
        }
    }
    ion-footer {
        height: 52px; // 下一步
        .nextstep {
            background-color: #00783a;
            bottom: 0;
            width: 100%;
            height: 100%;
            button {
                background-color: transparent;
                height: 100%;
                width: 100%;
                color: #fff;
                font-size: 2rem;
                margin: 0;
                padding: 0;
                &:active {
                    background-color: #039248;
                }
            }
        }
    }
}