page-pk-game-staff-two {
    .content {
        background: #fff !important;
    }
    .wrapper {
        // display: -ms-flexbox;
        // display: box;
        display: flex;
        -o-box-align: center;
        align-items: center;
        -o-box-pack: center;
        justify-content: center;
        -o-box-orient: vertical;
        flex-direction: column;
        height: 30%;
    }
    .green {
        margin-top: 15px;
    }
    .green .progress,
    .red .progress,
    .orange .progress {
        position: relative;
        border-radius: 50%;
    }
    .green .progress,
    .red .progress,
    .orange .progress {
        width: 180px;
        height: 180px;
    }
    .green .progress {
        border: 5px solid #e8f7ef;
    } //   .green .progress {
    //     box-shadow: 0 0 20px #f2f7f0;
    //   }
    .green .progress,
    .red .progress,
    .orange .progress {
        transition: all 1s ease;
    }
    .green .progress .inner,
    .red .progress .inner,
    .orange .progress .inner {
        position: absolute;
        overflow: hidden;
        z-index: 2;
        border-radius: 50%;
    }
    .green .progress .inner,
    .red .progress .inner,
    .orange .progress .inner {
        width: 170px;
        height: 170px;
    }
    .green .progress .inner,
    .red .progress .inner,
    .orange .progress .inner {
        border: 5px solid #e8f7ef;
    }
    .green .progress .inner,
    .red .progress .inner,
    .orange .progress .inner {
        transition: all 1s ease;
    }
    .green .progress .inner .water,
    .red .progress .inner .water,
    .orange .progress .inner .water {
        position: absolute;
        z-index: 1;
        width: 200%;
        height: 200%;
        left: -50%;
        border-radius: 40%;
        -webkit-animation-iteration-count: infinite;
        animation-iteration-count: infinite;
        -webkit-animation-timing-function: linear;
        animation-timing-function: linear;
        -webkit-animation-name: spin;
        animation-name: spin;
    }
    .green .progress .inner .water {
        top: 60%;
    }
    .green .progress .inner p {
        font-size: 1.2rem !important;
        color: #ccc;
        font-weight: 350 !important;
    }
    .green .progress .inner span {
        font-size: 4.5rem !important;
        color: rgb(6, 114, 38);
        font-weight: 330 !important;
        text-shadow: 0 0 10px #858a85;
    }
    .green .progress .inner .water {
        background: rgba(232, 247, 232, 0.5);
    }
    .green .progress .inner .water,
    .red .progress .inner .water,
    .orange .progress .inner .water {
        transition: all 1s ease;
    }
    .green .progress .inner .water,
    .red .progress .inner .water,
    .orange .progress .inner .water {
        -webkit-animation-duration: 10s;
        animation-duration: 10s;
    } //   .green .progress .inner .water {
    //     box-shadow: 0 0 20px #d9f1cb;
    //   }
    //   water: 2;
    .green .progress .inner .water2,
    .red .progress .inner .water2,
    .orange .progress .inner .water2 {
        position: absolute;
        z-index: 1;
        width: 200%;
        height: 200%;
        left: -50%;
        border-radius: 40%;
        -webkit-animation-iteration-count: infinite;
        animation-iteration-count: infinite;
        -webkit-animation-timing-function: linear;
        animation-timing-function: linear;
        -webkit-animation-name: spin;
        animation-name: spin;
    }
    .green .progress .inner .water2 {
        top: 60%;
    }
    .green .progress .inner .water2 {
        background: rgba(225, 245, 225, 0.5);
    }
    .green .progress .inner .water2,
    .red .progress .inner .water2,
    .orange .progress .inner .water2 {
        transition: all 1s ease;
    }
    .green .progress .inner .water2,
    .red .progress .inner .water2,
    .orange .progress .inner .water2 {
        -webkit-animation-duration: 10s;
        animation-duration: 10s;
    } //   .green .progress .inner .water2 {
    //     box-shadow: 0 0 20px #eff7ea;
    //   }
    // water2
    .green .progress .inner .percent,
    .red .progress .inner .percent,
    .orange .progress .inner .percent {
        position: absolute;
        top: 10%;
        left: 0;
        width: 100%;
        height: 100%;
        font-weight: 320;
        text-align: center;
    }
    .green .progress .inner .percent,
    .red .progress .inner .percent,
    .orange .progress .inner .percent {
        line-height: 40px;
        font-size: 4rem;
        p {
            margin: 0;
            font-size: 2rem;
        }
    }
    .green .progress .inner .percent {
        color: rgb(131, 127, 127);
    } //   .green .progress .inner .percent {
    //     text-shadow: 0 0 10px #858a85;
    //   }
    .green .progress .inner .percent,
    .red .progress .inner .percent,
    .orange .progress .inner .percent {
        transition: all 1s ease;
    }
    .instructions {
        display: inline-block;
        margin: 5px 0;
        font-size: 16px;
    }
    @-webkit-keyframes spin {
        from {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
        }
        to {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
        }
    }
    @keyframes spin {
        from {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
        }
        to {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
        }
    }
    .pkGameItems {
        display: flex;
        margin-top: 1rem;
        height: 6rem;
        div {
            flex: 1;
            text-align: center;
            &:nth-child(2):after {
                content: "";
                width: 1px;
                height: 3.6rem;
                /*这个就是设置渐变的啦！*/
               background: rgba(15, 1, 1, 0.1);
                position: absolute;
                left: 35%;
                top:33%;
                z-index: 1;
            }
            &:nth-child(2)::before {
                content: "";
                width: 1px;
                height: 3.6rem;
                /*这个就是设置渐变的啦！*/
                background: rgba(15, 1, 1, 0.1);
                position: absolute;
                left: 65%;
                top:33%;
                z-index: 1;
            }
            p {
                margin: 0;
                &:first-child {
                    font-size: 2.5rem;
                    color: rgb(6, 114, 38);
                    font-weight: 350 !important;
                }
                &:last-child {
                    font-size: 1.5rem;
                    color: #ccc;
                }
            }
        }
    }
    .pkBlank{
        height: 1rem;
        background: #f6f6f6;
    }
    .pkItemTitle{
        height: 4rem;
        display: flex;
        align-items: center;
        color: gray;
        div{
            flex: 1;
            text-align: center;
            span{
                display: inline-block;
                height: 3.8rem;
                line-height: 3.8rem;
                border-bottom: .2rem solid  rgb(6, 114, 38);
            }
        }
    }
    .pkItem-subTitle{
        height: 4rem;
        display: flex;
        align-items: center;
        background: #f6f6f6;
        font-size: 1.5rem;
        color: gray;
        div{
            flex: 1;
            text-align: center;
        }
    }
}