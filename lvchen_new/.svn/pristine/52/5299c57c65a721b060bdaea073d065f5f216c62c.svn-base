<ion-header>
  <ion-navbar>
    <ion-title>寄存订单</ion-title>
  </ion-navbar>
  <ion-searchbar placeholder="输入单号/手机号" padding [(ngModel)]="phoneNos" (keyup)="search($event)" type="search" autofocus="autofocus"  class="search-bar" mode="ios" showCancelButton="true" cancelButtonText="搜索" (ionCancel)="onSearch()">
  </ion-searchbar>
</ion-header>
<ion-content>
  <ion-list style="margin-top: 15px;">
    <ion-item *ngFor='let item of data;index as i;' (tap)="onDetail(i)">
      <div class="list-item-left">
        <h2>{{item.memberPhone}}</h2>
        <h4>{{item.depositTime.time|date:'yyyy年MM月dd日'}}</h4>
      </div>
      <div class="list-item-right">
        <span>剩余数量&nbsp;&nbsp;</span>
        <span class="num-text">{{item.num}}&nbsp;&nbsp;&nbsp;&nbsp;</span>
        <ion-icon name="ios-arrow-forward" color="gentle"></ion-icon>
      </div>
    </ion-item>
  </ion-list>
  <ion-fab right bottom>
      <button ion-fab (tap)='addOrder()'>
        <ion-icon name='md-add'></ion-icon>
      </button>
    </ion-fab>

</ion-content>
