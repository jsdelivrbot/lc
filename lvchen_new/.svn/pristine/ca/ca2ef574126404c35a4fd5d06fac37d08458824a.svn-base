<ion-header>
  <ion-navbar>
    <ion-title>投诉</ion-title>
  </ion-navbar>
</ion-header>
<ion-content>
  <div class="header-div" style="background:#fff;">
    <ion-list>
      <ion-item><span style="color: #666">被投诉门店</span><span item-end> {{data.storeDesc}} </span>
      </ion-item>
      <ion-item><span style="color: #666">被投诉人</span><span item-end> {{data.userName}} </span>
      </ion-item>
      <ion-item><span style="color: #666">被投诉人手机</span><span item-end> {{data.cashierNo}} </span>
      </ion-item>
      <ion-item><span style="color: #666">被投诉追溯码</span><span item-end> {{data.integralCode}} </span>
      </ion-item>
      <ion-item><span style="color: #666">被投诉商品名称</span><span item-end style="width: 60%;"> {{data.goodsDesc}} </span>
      </ion-item>
    </ion-list>
  </div>
  <textarea rows="3" cols="20" placeholder="投诉内容:......" class="textarea" [(ngModel)]="memo"></textarea>
  <div style="width: 100%; height: 120px;background: #fff; padding: 10px;margin-top: 10px;">
    <div style="float: left;height: 100px;line-height: 100px;margin-right: 20px;margin-left: 10px;color: #666;">图片</div>
    <img src="{{base64Image}}" style="width: 100px;height: 100px;" (click)='onCamera()' />
  </div>
</ion-content>
<ion-footer no-shadow (tap)='onSubmit()'>
  <ion-toolbar>
    <ion-title style="text-align: center;">确认</ion-title>
  </ion-toolbar>
</ion-footer>
